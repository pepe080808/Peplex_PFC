<UserControl x:Class="Peplex_PFC.UI.Panels.MenuProfileControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Peplex_PFC.UI.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80" Cursor="Hand">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Image Name="ImgProfile" Grid.Row="0" Stretch="Uniform" Margin="2 5 2 5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="TxtNick" Grid.Row="1" Foreground="White" FontSize="12" FontFamily="Tahoma" VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
